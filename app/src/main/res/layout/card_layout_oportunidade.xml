<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardOportunidade"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/oportunidadeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pessoa Nome"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/oportunidadeSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Origem e Agendamento"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/oportunidadeEtapaStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Etapa e Status"
                android:textSize="14sp" />

        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>