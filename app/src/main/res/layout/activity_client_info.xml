<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Text Input for Testing -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Nome Completo Aluno"
            app:boxStrokeColor="#2196F3"
            app:hintTextColor="#2196F3">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTeste"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Informações Básicas Box -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header - Clickable -->
                <LinearLayout
                    android:id="@+id/headerInformacoesBasicas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Informações Básicas"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                    <ImageView
                        android:id="@+id/iconInformacoesBasicas"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/unfold_arrow"
                        android:contentDescription="Expandir"
                        android:tint="#666666" />

                </LinearLayout>

                <!-- Content - Expandable -->
                <LinearLayout
                    android:id="@+id/contentInformacoesBasicas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:visibility="gone"
                    android:background="#fafafa">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nome:"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#555555"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvNomeCliente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="João Silva"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email:"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#555555"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvEmailCliente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="joao.silva@email.com"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Telefone:"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#555555"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvTelefoneCliente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(11) 99999-9999"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Data de Nascimento:"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#555555"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvDataNascimento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="15/03/1990"
                        android:textSize="16sp"
                        android:textColor="#333333" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Acompanhamento do Estudante Box -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header - Clickable -->
                <LinearLayout
                    android:id="@+id/headerAcompanhamentoEstudante"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Acompanhamento do Estudante"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                    <ImageView
                        android:id="@+id/iconAcompanhamentoEstudante"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/unfold_arrow"
                        android:contentDescription="Expandir"
                        android:tint="#666666" />

                </LinearLayout>

                <!-- Content - Expandable -->
                <LinearLayout
                    android:id="@+id/contentAcompanhamentoEstudante"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:visibility="gone"
                    android:background="#fafafa">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Curso:"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#555555"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvCurso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Desenvolvimento Android"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Progresso:"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#555555"
                        android:layout_marginBottom="4dp" />

                    <ProgressBar
                        android:id="@+id/progressBarCurso"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:progress="75"
                        android:max="100"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvProgresso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="75% concluído"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Última Atividade:"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#555555"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvUltimaAtividade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Exercício 12 - Layouts Avançados"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Status:"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#555555"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvStatusEstudante"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ativo"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>